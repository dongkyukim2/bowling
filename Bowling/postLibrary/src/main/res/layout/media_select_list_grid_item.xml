<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:id="@+id/item_thumbnail_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/item_thumbnail_gif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/item_thumbnail_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_thumbnail_parent"
                android:layout_alignLeft="@id/item_thumbnail_parent"
                android:layout_alignRight="@id/item_thumbnail_parent"
                android:layout_alignTop="@id/item_thumbnail_parent"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_check"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="99"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>
</layout>