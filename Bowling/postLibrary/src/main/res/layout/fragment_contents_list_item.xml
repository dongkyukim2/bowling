<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>


    <LinearLayout
            android:id="@+id/content_view_holder_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:id="@+id/title_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"/>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp">

                    <TextView
                            android:id="@+id/contents_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:textColor="#000000"
                            android:fontFamily="@font/content"
                            android:textSize="16dp"/>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/user_name"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_like_counter"
                                    android:textSize="12dp"/>

                            <TextView
                                    android:id="@+id/write_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:textColor="#969696"
                                    android:textSize="12dp"/>
                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:id="@+id/like_image_parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/like_image_view"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginLeft="10dp"
                                        app:srcCompat="@drawable/ic_heart_outline_grey"/>

                                <TextView
                                        android:id="@+id/like_count_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="6dp"
                                        android:text="0"
                                        android:textColor="#000000"
                                        android:textSize="12dp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/reply_image_parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/reply_image_view"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginLeft="10dp"
                                        app:srcCompat="@drawable/ic_comment_outline_grey"/>

                                <TextView
                                        android:id="@+id/reply_count_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="6dp"
                                        android:text="0"
                                        android:textColor="#000000"
                                        android:textSize="12dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginRight="14dp"
                    android:background="#000000"
                    android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
</layout>