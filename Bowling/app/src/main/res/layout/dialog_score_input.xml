<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activity.IntroActivity">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/score_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/input_border"
    android:gravity="center"
    android:text="2019-01-18"
    android:textColor="#000000"
    android:textSize="15dp"
    app:layout_constraintTop_toTopOf="parent"/>

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/score_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/input_border"
    android:gravity="center"
    android:text="오후 2:06"
    android:textColor="#000000"
    android:textSize="15dp"
    app:layout_constraintTop_toBottomOf="@id/score_date"/>


  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/score_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/input_border"
    android:gravity="center"
    android:hint="점수 입력"
    android:inputType="numberDecimal"
    android:maxLength="3"
    android:textColor="#000000"
    android:textSize="15dp"
    app:layout_constraintTop_toBottomOf="@id/score_time"/>

  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/comment_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/input_border"
    android:gravity="center"
    android:hint="내용"
    android:maxLength="30"
    android:maxLines="3"
    android:textColor="#000000"
    android:textSize="15dp"
    app:layout_constraintTop_toBottomOf="@id/score_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>
