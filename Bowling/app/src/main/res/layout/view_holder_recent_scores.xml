<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:id="@+id/recent_score_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="2dp">
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="6dp"
                    android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/recent_avg_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="100"
                        android:fontFamily="@font/bamin"
                        android:textColor="#000000"
                        android:textSize="34dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/recent_max_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:fontFamily="@font/bamin"
                        android:textColor="#F44336"
                        android:textSize="18dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recent_avg_text"/>


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/recent_min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bamin"
                        android:layout_marginLeft="20dp"
                        android:text="100"
                        android:textColor="#3F51B5"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@id/recent_avg_text"
                        app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recent_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="2019-01-19"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/bamin"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#D69327"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>
</layout>