<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activity.CreateClubActivity">

        <include
                android:id="@+id/include_toolbar"
                layout="@layout/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/club_title_image_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#89B2D3"
                app:srcCompat="@drawable/ic_action_add_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintDimensionRatio="w,1:1"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/club_title_text_view"
                android:gravity="center"
                android:hint="클럽 이름을 입력해주세요"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:maxLength="10"
                android:background="#ffffff"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintBottom_toTopOf="@id/club_title_image_view"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/club_info_text_view"
                android:gravity="center"
                android:hint="클럽 소개를 입력해주세요"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:maxLength="100"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/club_title_image_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>