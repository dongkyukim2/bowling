<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/club_info_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="36dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/club_image_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/team_default"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/club_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/club_image_view"
                app:layout_constraintBottom_toBottomOf="@id/club_image_view"
                app:layout_constraintRight_toRightOf="@id/club_image_view"
                android:padding="10dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:lines="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>